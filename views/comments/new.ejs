<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Add New Comment to <%= campground.name %></h1>
    <div style="max-width:450px; margin:0 auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="your comment">
            </div>
            <button class="btn btn-primary btn-block" type="submit">Post</button>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>