<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Edit Comment</h1>
    <div style="max-width:450px; margin:0 auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="your comment" value="<%= comment.text %>">
            </div>
            <button class="btn btn-primary btn-block" type="submit">Edit</button>
        </form>
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>